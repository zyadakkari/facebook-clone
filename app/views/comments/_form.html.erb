
<%= simple_form_for [@post, @post.comments.build], data: { action: "ajax:success->comments#createSuccess" } do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
  <%= f.input :body, label: false, placeholder: "Type your comment here...", data: { target: "comments.commentBody"} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
